<article class="module width_full">
<header><h3>Cadastro imagens</h3></header>
<div class="module_content">

  <%= form_for [:admin, @gallery] do |f| %>
    <% if @gallery.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@gallery.errors.count, "error") %> : Não foi possível salvar o registro no banco:</h2>
    <% @gallery.errors.full_messages.each do |msg| %>
    <h4 class="alert_error"><%= msg %></h4>
    <% end %>

    </div>
    <% end %>

    <div class="imagempost">

 <div id=".media">
<div class="media">
<%- @galleries.each do |g| -%>
  <%= link_to image_tag(g.foto.url(:thumb))   %>
<%- end -%>
</div>
</div>
<%= will_paginate @galleries %>

 </div> 
    <fieldset>  
    <label>Selecione a categoria</label>
     <%= f.collection_select(:type_id, @types, :id ,:name, :prompt => true ) %> 

    </fieldset>
      <fieldset>
      <label>Nome</label>
      <%= f.text_field :title %>
      </fieldset>
      <fieldset>
      <label>Endereço do site</label>
      <%= f.text_field :url %>
      </fieldset>
      <fieldset>
       <label>Descrição da imagem</label>
       <%= f.text_area :body, :rows => "3"  %>
      </fieldset>
      <fieldset>
       <%= f.file_field :foto %>
      </fieldset>
    </div>
    <footer>
    <div class="submit_link">
      <%= f.submit 'Salvar registro',:class => 'alt_btn' %>
      <input type="submit" value="Reset">
    </div>
    </footer>
  <% end %>  
</article><!-- end of post new article -->  
<div class="spacer"></div>


