
<article class="module width_3_quarter">
<% if notice.present? %>
  <h4 class="alert_success"><%= notice %></h4>
  <% end %>
<header><h3 class="tabs_involved">Imagens cadastradas</h3>
<ul class="tabs">
<li><%= link_to new_admin_gallery_path, :title => "Criar novo registro" do %>
  Novo registro<% end %></li>

</ul>
</header>

<div class="tab_container">
<div id="tab1" class="tab_content">
  <table class="tablesorter" cellspacing="0"> 
    <thead> 
    <tr>   
    <th>Código</th>
    <th>Nome</th>
    <th>Imagem</th>    
    <th>Ações</th> 
    </tr> 
    </thead> 
    <tbody>
    <% if@galleries.present? %>
    <% @galleries.each  do |c| %> 
    <tr> 
  
    <td width="100px"><%= c.id %></td>
    <td><%= c.title %></td> 
    <td>imagem</td>
    
    <td width="120px">
      <%= link_to edit_admin_gallery_path(c) do %>
      <%= image_tag "admin/icn_edit.png" , :title => "Editar registro " %>
     
      <% end %>
       <%= link_to admin_gallery_path(c) do %>
      <%= image_tag "admin/icn_search.png" , :title => "Visualizar registro " %>
     
      <% end %>
       
      <%= link_to admin_gallery_path(c), confirm: 'Deletar arquivo, Tem certeza ?', method: :delete , :title => "Excluir arquivo"  do %>
       <%= image_tag "admin/icn_trash.png"  %>
     
      <% end %>
   </td> 
       
    </tr> 

         <% end %>  
    <% end %>

<tr>
<td colspan="6" align="center"><%= will_paginate @galleries %></td>
</tr>

    </tbody> 
  </table>
  
</div><!-- end of #tab1 -->

</div><!-- end of .tab_container -->

</article><!-- end of content manager article -->
<div class="clear"></div>
