
<article class="module width_full">
<header><h3>Cadastro de categorias</h3></header>
<div class="module_content">

  <%= form_for [:admin, @category] do |f| %>
  <% if @category.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> : Não foi possível salvar o registro no banco:</h2>

     
      <% @category.errors.full_messages.each do |msg| %>
     <h4 class="alert_error"><%= msg %></h4>
    
      <% end %>
     
      </div>
  <% end %>
  

      <fieldset>

      <label>Nome</label>
      <%= f.text_field :name %>
      </fieldset>
</div>
      <footer>
      <div class="submit_link">
      <%= f.submit 'Salvar registro',:class => 'alt_btn' %>
    
    <%= link_to admin_categories_path do %>
Cancelar
<% end %>
      </div>
      </footer>
  <% end %>  


</article><!-- end of post new article -->  


<div class="spacer"></div>

